{
    "compilerOptions": {
        "target": "es6",
        "declaration": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },

    "include": [
        "dist"
    ],

    "exclude": [
        "node_modules",
        "development",
        "src"
    ]
}
